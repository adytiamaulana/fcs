entity PersonalInfo {
	name String
	gender String
	birthDate String
	telephone String
	createdBy String
	createdAt Instant
	updatedBy String
	updatedAt Instant
    deletedBy String
    deletedAt Instant
}

entity Address {
	address String
	country String
	province String
	city String
	district String
	village String
	postalCode Integer
	telephone String
	createdBy String
	createdAt Instant
	updatedBy String
	updatedAt Instant
    deletedBy String
    deletedAt Instant
}

entity CardType {
    cardCode Integer
    cardName String
	createdBy String
	createdAt Instant
	updatedBy String
	updatedAt Instant
    deletedBy String
    deletedAt Instant
}

entity ApplicationStatus {
    code String
    status String
	createdBy String
	createdAt Instant
	updatedBy String
	updatedAt Instant
    deletedBy String
    deletedAt Instant
}

entity TaskHistory {
	branch String
	startDate Instant
	endDate Instant
}

relationship OneToOne {
  PersonalInfo{address} to Address
  PersonalInfo{cardType} to CardType
  TaskHistory{personalInfo} to PersonalInfo
  TaskHistory{applicationStatus} to ApplicationStatus
}

// Set pagination options
paginate CardType, ApplicationStatus, TaskHistory with infinite-scroll
paginate ApplicationStatus, TaskHistory with pagination

